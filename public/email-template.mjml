<mjml>
  <mj-head>
    <mj-font name="Montserrat" href="https://fonts.googleapis.com/css?family=Montserrat" />
    <mj-attributes>
      <mj-text font-family="Montserrat, Arial" />
      <mj-class name="card" padding="20px 5px"></mj-class>
      <mj-class name="card-title" font-weight="700" font-size="25px" align="center"></mj-class>
      <mj-class name="card-content" font-size="16px" align="justify" line-height="1.2"></mj-class>
    </mj-attributes>
  </mj-head>
  <mj-body width="900px" background-color="#fff">
    <mj-section>
      <mj-column>
        <mj-text>
          <h3 style="font-size: 16px; font-weight: 800;">
            RPA | New Joiner <span style="color: rgb(193,205,21);">{{date}}</span>
          </h3>
          <h1 style="font-size: 32px; font-weight: 400;">
            Bem-vindo Ã  equipa, <span style="color: rgb(193,205,21);">{{name}}</span>!
          </h1>
        </mj-text>
      </mj-column>
    </mj-section>
    <mj-section>
      <mj-column width="50%" vertical-align="middle">
        <mj-image src="{{photo}}" alt="[[Joiner]]" border-radius="100%" width="300px" height="300px" />
      </mj-column>
      <mj-column width="50%" vertical-align="middle">
        <mj-image src="{{eveeImg}}" alt="Robot" width="150px" height="200px" />
      </mj-column>
    </mj-section>
    <mj-section background-color="rgb(193,205,21)" padding="0">
      <mj-column mj-class="card">
        <mj-text mj-class="card-title">About Me</mj-text>
        <mj-text mj-class="card-content">
          {{aboutMe}}
        </mj-text>
      </mj-column>
      <mj-column mj-class="card">
        <mj-text mj-class="card-title">To Remember Me</mj-text>
        <mj-text mj-class="card-content">
          {{toRememberMe}}
        </mj-text>
      </mj-column>
      <mj-column mj-class="card">
        <mj-text mj-class="card-title">Where I Am</mj-text>
        <mj-text mj-class="card-content">
          {{whereIAm}}
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>